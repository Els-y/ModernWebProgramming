.col-md-10.col-md-offset-1
  .row
    .col-md-4.col-md-offset-4
      //- input(type='hidden', name='_token', value=_token)
      form.login-form(name='login-form')
        h3.form-header Sign In
        hr
        .alert.alert-warning.alert-dismissable(ng-show='loginInfo')
          button.close(type='button', ng-click='closeAlert()')
            | Ã—
          | {{loginInfo}}

        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-user
            input.form-control(type='text', name='username', placeholder='Username', ng-model='form.username')
        .form-group
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-lock
            input.form-control(type="password", name="password", placeholder="Password", ng-model='form.password')
        .form-group.pull-right.btns
          button.btn.btn-primary.submit(ng-click='loginPost()', ng-disabled='!form.username || !form.password') Submit
          button.btn.btn-default.reset(type="reset") Reset
