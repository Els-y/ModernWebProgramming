extends layout

block css
  link(rel='stylesheet', href='../styles/index.css')

block iflogout
  li
    a(href='/')
      span.glyphicon.glyphicon-user
      |  Register

block content
  .col-md-4.col-md-offset-4
    form#login-form(action='', method='post', role='form', onsubmit='return true;')
      h3 Register
      hr
      if warning
        .alert.alert-warning
          a.close(href="#", data-dismiss="alert") &times;
          p #{warning}
      .form-group
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-user
          input.form-control(type='text', name='username', placeholder='Username')
      .form-group
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-lock
          input.form-control(type='text', name='stuID', placeholder='Student Number')
      .form-group
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-earphone
          input.form-control(type='text', name='phone', placeholder='Mobile phone')
      .form-group
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-envelope
          input.form-control(type='text', name='email', placeholder='Email')
      .form-group.pull-right
        input.btn.btn-primary.submit(type='submit', value='Register')
        button.btn.btn-default.reset(type='reset') Reset
      .clear