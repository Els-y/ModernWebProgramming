extends layout

block css
  link(rel='stylesheet', href='../public/styles/user.css')

block iflogout
  li
    a(href='/')
      span.glyphicon.glyphicon-log-out
      |  Logout

block content
  .page-header
    h1 Welcome
  .rows
    .information.col-md-4.col-md-offset-4
      .info-group
        p Username: 
          span #{user.username}
      .info-group
        p Student Number: 
          span #{user.stuID}
      .info-group
        p Phone: 
          span #{user.phone}
      .info-group
        p Email: 
          span #{user.email}
